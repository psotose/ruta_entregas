<h1 class="text-center">Carga de rutas</h1>
<%= form_with(url: map_routes_path, html: {multipart: true}, local: true) do |f| %>
  <%= f.label :route_name %>
  <%= f.text_field :route_name, placeholder: "Nombre ruta" %>
    <br>
  <%= f.label :date %>
  <%= f.datetime_local_field :date %>
    <br>
  <%= f.file_field 'archivo', accept:".json" %>
    <br>
  <%= f.submit  "Cargar", class: 'btn btn-info' %>
    <br>
<% end %>

<%= link_to 'Ver rutas cargadas', root_path %>
